{
  "name": "roblox-ts-knit",
  "version": "1.0.0",
  "description": "Roblox-TS + Knit boilerplate optimized for agentic dev velocity",
  "main": "out/init.lua",
  "scripts": {
    "build": "rbxtsc",
    "watch": "rbxtsc -w",
    "build:watch": "rbxtsc -w --incremental",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "selene .",
    "lint:fix": "selene . --fix",
    "typecheck": "rbxtsc --noEmit",
    "typecheck:watch": "rbxtsc --noEmit -w",
    "clean": "rm -rf out node_modules/.cache",
    "signal": "make signal",
    "fast-test": "make fast-test"
  },
  "keywords": [
    "roblox",
    "roblox-ts",
    "typescript",
    "knit",
    "game-development"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rbxts/compiler-types": "^4.0.0",
    "@rbxts/t": "^7.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "rbxts": "^4.0.0",
    "selene": "^1.12.0",
    "typescript": "^5.0.0"
  },
  "knit": {
    "services": [
      "src/services/**/*.ts"
    ],
    "components": [
      "src/components/**/*.ts"
    ],
    "processors": [
      "src/processors/**/*.ts"
    ]
  },
  "rojo": {
    "name": "RobloxTSKnit",
    "tree": {
      "$path": "out"
    }
  }
}
