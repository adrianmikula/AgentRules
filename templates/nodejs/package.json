{
  "name": "nodejs-template",
  "version": "1.0.0",
  "description": "Node.js boilerplate with agentic dev velocity principles",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit --verbose",
    "test:contract": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/contract --verbose",
    "test:fast": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit tests/contract --verbose",
    "test:full": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "lint": "eslint index.js src/ tests/"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  }
}
